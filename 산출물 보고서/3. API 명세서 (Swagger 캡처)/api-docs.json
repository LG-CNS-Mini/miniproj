    "paths": {
        "/auth/api/v2/inspire/user/logout": {
            "post": {
                "tags": [
                    "Logout API"
                ],
                "summary": "로그아웃",
                "description": "Authorization 헤더의 Access Token에서 사용자 식별자를 추출하고, 해당 사용자의 Refresh Token을 Redis에서 삭제합니다.",
                "operationId": "logout",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Bearer 액세스 토큰",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "로그아웃 완료"
                    },
                    "401": {
                        "description": "유효하지 않은 토큰 / 헤더 누락"
                    },
                    "500": {
                        "description": "서버 오류"
                    }
                }
            }
        },
        "/api/v2/inspire/user/signup": {
            "post": {
                "tags": [
                    "User API"
                ],
                "summary": "회원가입",
                "operationId": "signup",
                "requestBody": {
                    "description": "회원가입 요청 본문",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserRequestDTO"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "204": {
                        "description": "가입 성공"
                    },
                    "400": {
                        "description": "유효성 검증 실패"
                    },
                    "500": {
                        "description": "서버 오류"
                    }
                }
            }
        },
        "/api/v2/inspire/user/profileimage/{userId}": {
            "post": {
                "tags": [
                    "User API"
                ],
                "summary": "프로필 이미지 업데이트",
                "description": "단일 이미지 파일을 업로드하여 사용자 프로필 이미지를 변경합니다.",
                "operationId": "updateProfileImage",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "사용자 ID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "user_123"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "image"
                                ],
                                "type": "object",
                                "properties": {
                                    "image": {
                                        "type": "string",
                                        "description": "업로드할 이미지 파일 (multipart/form-data)",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "업데이트 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ProfileImageResponseDTO"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "잘못된 요청/파일 누락"
                    },
                    "415": {
                        "description": "지원하지 않는 콘텐츠 타입"
                    },
                    "500": {
                        "description": "서버 오류"
                    }
                }
            }
        },
        "/api/v2/inspire/like/unlike": {
            "post": {
                "tags": [
                    "Like API"
                ],
                "summary": "좋아요 취소",
                "description": "요청 본문에 포함된 이메일/게시글ID로 좋아요를 취소하고 현재 총 좋아요 수를 반환합니다.",
                "operationId": "userUnlikesPost",
                "requestBody": {
                    "description": "좋아요 취소 요청",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LikeRequestDTO"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "좋아요 취소 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "example": {
                                        "likeCount": 12
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "유효성 검증 실패(필드 오류 등)"
                    }
                }
            }
        },
        "/api/v2/inspire/like/like": {
            "post": {
                "tags": [
                    "Like API"
                ],
                "summary": "좋아요 등록",
                "description": "요청 본문에 포함된 이메일/게시글ID로 좋아요를 등록하고 현재 총 좋아요 수를 반환합니다.",
                "operationId": "userLikesPost",
                "requestBody": {
                    "description": "좋아요 등록 요청",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LikeRequestDTO"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "좋아요 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "example": {
                                        "likeCount": 13
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "유효성 검증 실패(필드 오류 등)"
                    }
                }
            }
        },
        "/api/v1/post/register": {
            "post": {
                "tags": [
                    "Post API"
                ],
                "summary": "게시글 등록 (multipart/form-data)",
                "description": "멀티파트로 게시글을 등록합니다.\n- content: 문자열\n- hashtags: 문자열 배열(예: [\"#봄날\",\"#산책\"])\n- authorEmail: 문자열\n- postImages: 이미지 파일들\n",
                "operationId": "register",
                "requestBody": {
                    "description": "게시글 등록 폼",
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/PostRequestDTO"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "생성 성공"
                    },
                    "500": {
                        "description": "서버 오류"
                    }
                }
            }
        },
        "/api/v1/post/ai/hashtag": {
            "post": {
                "tags": [
                    "Image AI API"
                ],
                "summary": "이미지 해시태그 추출",
                "description": "여러 이미지 파일을 업로드하면 각 이미지에 대한 해시태그 목록을 반환합니다.",
                "operationId": "image",
                "requestBody": {
                    "description": "멀티파트 폼 데이터 (images: 이미지 파일 목록, 기타 필드 포함 가능)",
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/ImageRequestDTO"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "분석 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/ImageHashtagDTO"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "잘못된 요청 / 파일 누락"
                    },
                    "415": {
                        "description": "지원하지 않는 콘텐츠 타입"
                    },
                    "500": {
                        "description": "서버 오류"
                    }
                }
            }
        },
        "/api/v1/follow/{followerEmail}/follow/{followingEmail}": {
            "post": {
                "tags": [
                    "Follow API"
                ],
                "summary": "팔로우",
                "description": "followerEmail 사용자가 followingEmail 사용자를 팔로우합니다.",
                "operationId": "follow",
                "parameters": [
                    {
                        "name": "followerEmail",
                        "in": "path",
                        "description": "팔로우를 시도하는 사용자 이메일",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "me@example.com"
                    },
                    {
                        "name": "followingEmail",
                        "in": "path",
                        "description": "팔로우 대상 사용자 이메일",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "other@example.com"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "팔로우 성공"
                    },
                    "400": {
                        "description": "잘못된 요청"
                    },
                    "404": {
                        "description": "사용자 없음"
                    },
                    "409": {
                        "description": "이미 팔로우 중"
                    }
                }
            }
        },
        "/api/v1/comments/register": {
            "post": {
                "tags": [
                    "Comment API"
                ],
                "summary": "댓글 입력",
                "description": "게시글에 새 댓글을 등록합니다.",
                "operationId": "insert",
                "requestBody": {
                    "description": "댓글 작성 요청 본문",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CommentRequestDTO"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "등록 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CommentResponseDTO"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "유효성 검증 실패"
                    },
                    "401": {
                        "description": "인증 필요"
                    }
                }
            }
        },
        "/api/v2/inspire/user/{userEmail}/{authorEmail}": {
            "get": {
                "tags": [
                    "User API"
                ],
                "summary": "프로필 조회",
                "description": "요청자가 특정 사용자의 프로필을 조회합니다.",
                "operationId": "getUser",
                "parameters": [
                    {
                        "name": "userEmail",
                        "in": "path",
                        "description": "조회 대상 사용자 이메일",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "target@example.com"
                    },
                    {
                        "name": "authorEmail",
                        "in": "path",
                        "description": "요청자(작성자) 이메일",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "me@example.com"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "조회 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserProfileResponseDTO"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "사용자 없음"
                    }
                }
            }
        },
        "/api/v2/inspire/user/suggest": {
            "get": {
                "tags": [
                    "User API"
                ],
                "summary": "사용자 자동완성",
                "description": "이름/이메일 일부 키워드로 사용자 목록을 최대 n개까지 추천합니다.",
                "operationId": "suggestUsers",
                "parameters": [
                    {
                        "name": "keyword",
                        "in": "query",
                        "description": "검색 키워드(부분 일치).",
                        "required": false,
                        "schema": {
                            "type": "string"
                        },
                        "example": "jun"
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "최대 반환 개수",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "default": 10
                        },
                        "example": 10
                    }
                ],
                "responses": {
                    "200": {
                        "description": "조회 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserSuggestDTO"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v2/inspire/user/signin": {
            "get": {
                "tags": [
                    "User API"
                ],
                "summary": "로그인",
                "description": "이메일/비밀번호로 로그인하고, 응답 헤더에 액세스/리프레시 토큰을 반환합니다.",
                "operationId": "signin",
                "parameters": [
                    {
                        "name": "request",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "$ref": "#/components/schemas/UserRequestDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "로그인 성공",
                        "headers": {
                            "Authorization": {
                                "description": "Bearer <access token>",
                                "style": "simple",
                                "schema": {
                                    "type": "string"
                                }
                            },
                            "Refresh-Token": {
                                "description": "Refresh token",
                                "style": "simple",
                                "schema": {
                                    "type": "string"
                                }
                            }
                        },
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponseDTO"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "인증 실패"
                    }
                }
            }
        },
        "/api/v2/inspire/like/status": {
            "get": {
                "tags": [
                    "Like API"
                ],
                "summary": "좋아요 상태 및 개수 조회",
                "description": "특정 사용자(email)의 특정 게시글(postId)에 대해 좋아요 여부와 총 좋아요 수를 반환합니다.",
                "operationId": "getLikeStatus",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "사용자 이메일",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "me@example.com"
                    },
                    {
                        "name": "postId",
                        "in": "query",
                        "description": "게시글 ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        },
                        "example": 11
                    }
                ],
                "responses": {
                    "200": {
                        "description": "조회 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "example": {
                                        "isLiked": true,
                                        "likeCount": 12
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "잘못된 요청 파라미터"
                    }
                }
            }
        },
        "/api/v1/post/read/{postID}": {
            "get": {
                "tags": [
                    "Post API"
                ],
                "summary": "게시글 단건 조회",
                "description": "postID로 게시글 상세를 조회합니다.",
                "operationId": "read",
                "parameters": [
                    {
                        "name": "postID",
                        "in": "path",
                        "description": "게시글 ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        },
                        "example": 11
                    }
                ],
                "responses": {
                    "404": {
                        "description": "게시글 없음"
                    },
                    "200": {
                        "description": "조회 성공",
                        "content": {
                            "*/*": {
                                "schema": {
                                    "$ref": "#/components/schemas/PostResponseDTO"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/post/posts/my": {
            "get": {
                "tags": [
                    "Post API"
                ],
                "summary": "내 게시글 목록 조회",
                "description": "작성자 이메일 기준으로 본인이 작성한 게시글 목록을 반환합니다.",
                "operationId": "myPosts",
                "parameters": [
                    {
                        "name": "authorEmail",
                        "in": "query",
                        "description": "작성자 이메일",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "me@example.com"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "조회 성공",
                        "content": {
                            "*/*": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/PostResponseDTO"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/post/following": {
            "get": {
                "tags": [
                    "Post API"
                ],
                "summary": "팔로잉 피드 조회",
                "description": "내가 팔로우하는 사용자의 게시글을 최신순으로 슬라이스 페이징하여 반환합니다.",
                "operationId": "feedFromFollowing",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "내 이메일",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "me@example.com"
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "페이지 번호",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "default": 0
                        },
                        "example": 0
                    },
                    {
                        "name": "size",
                        "in": "query",
                        "description": "페이지 크기",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "default": 5
                        },
                        "example": 5
                    },
                    {
                        "name": "includeMe",
                        "in": "query",
                        "description": "내 글 포함 여부",
                        "required": false,
                        "schema": {
                            "type": "boolean",
                            "default": true
                        },
                        "example": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "조회 성공",
                        "content": {
                            "*/*": {
                                "schema": {
                                    "$ref": "#/components/schemas/SliceResponseDTO"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/comments/{postId}": {
            "get": {
                "tags": [
                    "Comment API"
                ],
                "summary": "게시글 단위 댓글 조회",
                "description": "해당 게시글의 댓글을 트리 구조(대댓글 포함)로 반환합니다.",
                "operationId": "getTree",
                "parameters": [
                    {
                        "name": "postId",
                        "in": "path",
                        "description": "게시글 ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int32"
                        },
                        "example": 11
                    }
                ],
                "responses": {
                    "200": {
                        "description": "조회 성공",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/CommentResponseDTO"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "게시글 없음"
                    }
                }
            }
        },
        "/api/v1/post/delete/{postID}": {
            "delete": {
                "tags": [
                    "Post API"
                ],
                "summary": "게시글 삭제",
                "description": "postID로 게시글을 삭제합니다.",
                "operationId": "delete",
                "parameters": [
                    {
